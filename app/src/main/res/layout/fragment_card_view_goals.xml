<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.CardViewGoals">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">



   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="14dp"
       android:text="All Clean"
       android:textColor="#000000"
       android:textSize="16sp"
       app:layout_constraintStart_toEndOf="@+id/imageView2"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:src="@drawable/ic_leafgoals"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginTop="8dp"
       android:drawableEnd="@drawable/ic_coin"
       android:drawablePadding="8dp"
       android:text="Reward : +10"
       android:textColor="#000000"
       app:layout_constraintStart_toEndOf="@+id/imageView2"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />
  <com.ms.square.android.expandabletextview.ExpandableTextView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      expandableTextView:animDuration="100"
      expandableTextView:maxCollapsedLines="5">
  </com.ms.square.android.expandabletextview.ExpandableTextView>
 </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>